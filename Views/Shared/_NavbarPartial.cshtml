<div class="navbar navbar-expand-md justify-content-between sticky-top">
    <h3 class="navbar-brand">
        <a asp-controller="Home" asp-action="Index" class="container-logo">PsDevs</a>
    </h3>

    <div>
        <button class="navbar-toggler text-center btn-navbar-collapse" type="button" data-toggle="collapse" data-target="#myNavBar">
            Menu <span class="fas fa-angle-double-down"></span>
        </button>

        <div class="collapse navbar-collapse" id="myNavBar">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="Careers">Careers</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="Team">Team</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-controller="Home" asp-action="Contact">Contact</a>
                </li>
                @if (User.Identity.IsAuthenticated)
                {
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-controller="Account" asp-action="Index">Admin</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link btn btn-danger text-light" asp-controller="Account" asp-action="Logout">Logout</a>
                    </li>
}
                else
                {
                    <li class="nav-item">
                        <a class="nav-link btn btn-primary text-light" asp-controller="Account" asp-action="Login">Login</a>
                    </li>
}
            </ul>
        </div>
    </div>
</div>