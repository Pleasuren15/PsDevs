@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="container-fluid container-intro-login-bg">
    <div class="container-intro-transbox">
        <div class="container">
            <partial name="_NavbarPartial" />

            <div class="container-intro">
                <h2 class="container-intro-transbox-header text-md-center">
                    AUTHERIZATION &amp; AUTHENTICATION
                </h2>
                <p class="container-intro-transbox-p text-md-center">
                    @ViewData["Title"]
                </p>
            </div>
        </div>
    </div>
</div>

<div class="container mt-2">
    <form asp-controller="Account" asp-action="Login">
        <div asp-validation-summary="ModelOnly" class="text-danger font-weight-bold ml-3"></div>
        <div class="form-group">
            <label asp-for="@Model.Email" class="font-weight-bolder"></label>
            <input asp-for="@Model.Email" class="form-control" type="text" value="Admin@PsDevs.ac.za"/>
            <span asp-validation-for="@Model.Email" class="text-danger font-weight-bolder"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Password" class="font-weight-bolder"></label>
            <input asp-for="@Model.Password" class="form-control" type="password" value="Secret123#"/>
            <span asp-validation-for="@Model.Password" class="text-danger font-weight-bolder"></span>
        </div>
        <div class="form-group mt-2">
            <button type="submit" class="btn btn-info">Login</button>
            <a class="btn btn-outline-success ml-1" asp-controller="Home" asp-action="Index">Home</a>
        </div>
    </form>
</div>