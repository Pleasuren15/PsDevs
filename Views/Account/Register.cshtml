@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="container-fluid container-intro-login-bg">
    <div class="container-intro-transbox">
        <div class="container">
            <partial name="_NavbarPartial" />

            <div class="container-intro">
                <h2 class="container-intro-transbox-header text-md-center">
                    AUTHERIZATION &amp; AUTHENTICATION
                </h2>
                <p class="container-intro-transbox-p text-md-center">
                    @ViewData["Title"]
                </p>
            </div>
        </div>
    </div>
</div>

<div class="container mt-2">
    <form asp-controller="Account" asp-action="Register">
        <div asp-validation-summary="ModelOnly" class="text-danger ml-3"></div>
        <div class="form-group">
            <label asp-for="@Model.Username" class="font-weight-bolder"></label>
            <input asp-for="@Model.Username" class="form-control" type="text" />
            <span asp-validation-for="@Model.Username" class="text-danger font-weight-bold"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Email" class="font-weight-bolder"></label>
            <input asp-for="@Model.Email" class="form-control" type="text" />
            <span asp-validation-for="@Model.Email" class="text-danger font-weight-bold"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.Password" class="font-weight-bolder"></label>
            <input asp-for="@Model.Password" class="form-control" type="password" />
            <span asp-validation-for="@Model.Password" class="text-danger font-weight-bold"></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.ConfirmPassword" class="font-weight-bolder"></label>
            <input asp-for="@Model.ConfirmPassword" class="form-control" type="password" />
            <span asp-validation-for="@Model.ConfirmPassword" class="text-danger font-weight-bold"></span>
        </div>
        <div class="form-group mt-2">
            <button type="submit" class="btn btn-danger">Register</button>
            <a class="btn btn-outline-success ml-1" asp-controller="Home" asp-action="Index">Home</a>
        </div>
    </form>
</div>
